<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:padding="5dp">
        <com.app.obl.oblmobileapp.font.RobotoTextView
            app:typeface="robotoMedium"
            android:id="@+id/txt_tran_date"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="2015-11-11"
            android:layout_width="wrap_content"
            style="@style/list_item_text"
            android:layout_height="wrap_content" />
        <com.app.obl.oblmobileapp.font.RobotoTextView
            app:typeface="robotoMedium"
            android:id="@+id/txt_tran_no"
            android:layout_alignParentLeft="true"
            android:text="xxxxxxxxxxxx"
            android:layout_width="100sp"
            style="@style/list_item_text"
            android:layout_gravity="left"
            android:layout_weight="1" />
        <com.app.obl.oblmobileapp.font.RobotoTextView
            app:typeface="robotoMedium"
            android:id="@+id/txt_tran_amount"
            android:layout_alignParentLeft="true"
            android:text="00000"
            android:layout_gravity="right"
            android:layout_weight="1"
            style="@style/list_item_text" />
        <com.app.obl.oblmobileapp.font.RobotoTextView
            app:typeface="robotoMedium"
            android:id="@+id/txt_tran_type"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Cr"
            android:layout_gravity="center_horizontal"
            style="@style/list_item_text" />
        <com.app.obl.oblmobileapp.font.RobotoTextView
            app:typeface="robotoMedium"
            android:id="@+id/txt_tran_amount_bal"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:text="000000000"
            android:layout_width="wrap_content"
            style="@style/list_item_text"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    </TableLayout>